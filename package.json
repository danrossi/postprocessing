{
	"name": "postprocessing",
	"version": "7.0.0-alpha",
	"description": "A post processing library that provides the means to implement image filter effects for three.js.",
	"homepage": "https://github.com/pmndrs/postprocessing",
	"main": "dist/postprocessing.js",
	"module": "dist/postprocessing.js",
	"types": "types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/postprocessing.js"
		}
	},
	"type": "module",
	"sideEffects": false,
	"license": "Zlib",
	"keywords": [
		"effect",
		"gbuffer",
		"filter",
		"pass",
		"pipeline",
		"post",
		"processing",
		"rendering",
		"rendertexture",
		"rtt",
		"three",
		"webgl",
		"webgpu"
	],
	"author": {
		"name": "Raoul van RÃ¼schen",
		"email": "vanruesc@outlook.de"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pmndrs/postprocessing.git"
	},
	"bugs": {
		"url": "https://github.com/pmndrs/postprocessing/issues"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">= 0.16.0"
	},
	"scripts": {
		"ava": "ava",
		"build:css": "sass --no-source-map -I manual/assets/css/src/values manual/assets/css/src:manual/assets/css/dist",
		"build:js": "node esbuild",
		"build:js:min": "node esbuild -m",
		"build:dts": "tsc -p tsconfig.d.json",
		"clean": "del-cli dist tmp manual/resources manual/assets/**/dist public",
		"deploy": "run-s postcss hugo gzip",
		"doc": "typedoc",
		"gzip": "gzipper c public",
		"hugo": "hugo -s manual --minify",
		"lint": "run-s lint:*",
		"lint:css": "stylelint --fix manual/assets/css/src",
		"lint:js": "eslint --ext .ts --fix src",
		"postcss": "postcss manual/assets/css/dist/index.css -o manual/assets/css/dist/index.css -c manual",
		"prepublishOnly": "run-s test doc",
		"prewatch": "run-s clean build:css build:js",
		"test": "run-s lint clean build:css build:js:min ava",
		"start": "hugo server -s manual -e development",
		"watch": "run-p watch:* start",
		"watch:css": "sass --no-source-map -I manual/assets/css/src/values manual/assets/css/src:manual/assets/css/dist -w",
		"watch:tsc": "tsc --noemit --watch --preserveWatchOutput",
		"watch:eslint": "esw -w --ext .ts --color src manual/assets/js/src",
		"watch:js": "node esbuild -w"
	},
	"ava": {
		"failFast": true,
		"files": [
			"test/**/*.js"
		]
	},
	"eslintConfig": {
		"extends": "aether/typescript"
	},
	"peerDependencies": {
		"three": ">= 0.147.0 < 0.149.0"
	},
	"devDependencies": {
		"@tweakpane/core": "1.x.x",
		"@types/three": "0.x.x",
		"@typescript-eslint/eslint-plugin": "5.x.x",
		"@typescript-eslint/parser": "5.x.x",
		"autoprefixer": "10.x.x",
		"ava": "5.x.x",
		"cssnano": "5.x.x",
		"del-cli": "5.x.x",
		"esbuild": "0.x.x",
		"esbuild-plugin-glsl": "1.x.x",
		"esbuild-ts-paths": "1.x.x",
		"eslint": "8.x.x",
		"eslint-config-aether": "1.x.x",
		"eslint-watch": "8.x.x",
		"gzipper": "7.x.x",
		"hugo-bin": "0.x.x",
		"npm-run-all": "4.x.x",
		"postcss": "8.x.x",
		"postcss-cli": "10.x.x",
		"postcss-preset-env": "7.x.x",
		"sass": "1.x.x",
		"spatial-controls": "5.x.x",
		"stylelint": "14.x.x",
		"stylelint-config-standard-scss": "6.x.x",
		"stylelint-order": "5.x.x",
		"three": "0.x.x",
		"tiny-glob": "0.x.x",
		"tslib": "2.x.x",
		"tweakpane": "3.x.x",
		"typedoc": "0.x.x",
		"typescript": "4.x.x"
	}
}
